{
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true,
         "suspicious": {
            "noExplicitAny": "off"
         }
      }
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3,
      "lineWidth": 120
   },
   "files": {
      "ignoreUnknown": false,
      "includes": ["src/**/*.ts", "example/**/*.ts", "*.json", "!dist"]
   }
}
